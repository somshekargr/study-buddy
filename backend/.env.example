# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/studybuddy

# API Keys
GROQ_API_KEY=your_groq_api_key_here

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here

